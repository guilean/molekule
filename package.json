{
  "name": "refractal",
  "description": "React component library built on top of styled-components and styled-system",
  "version": "0.6.1",
  "main": "lib/refractal.js",
  "module": "lib/refractal.es.js",
  "files": [
    "lib"
  ],
  "keywords": [
    "react",
    "styled",
    "ui-framework"
  ],
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm-run-all clean rollup",
    "docs": "yarn docz dev",
    "docs:build": "rimraf dist && yarn docz build",
    "docs:deploy": "npm run docs:build && gh-pages -d dist",
    "prepublishOnly": "npm-run-all build",
    "rollup": "rollup -c",
    "test": "jest",
    "lint": "eslint src",
    "release": "standard-version && git push --follow-tags"
  },
  "dependencies": {
    "lodash": "^4.17.10",
    "styled-system": "^2.2.9"
  },
  "peerDependencies": {
    "polished": "^1.9.0",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-animations": "^1.0.0",
    "styled-components": "^3.2.3",
    "styled-system": "^2.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^23.2.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "docz": "^0.7.0",
    "docz-plugin-babel6": "^0.7.0",
    "docz-theme-default": "^0.7.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint-config-sappira": "^1.4.0",
    "gh-pages": "^1.1.0",
    "jest": "^23.3.0",
    "jest-styled-components": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "react": "^0.14.x || ^15.x || ^16.x",
    "react-animations": "^1.0.0",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-filesize": "^2.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "standard-version": "^4.4.0",
    "styled-components": "^3.2.3"
  }
